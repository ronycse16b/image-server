# Server
PORT=4000
NODE_ENV=development

# Uploads & CDN URL
UPLOADS_DIR=uploads
UPLOADS_URL=http://localhost:4000/uploads

# Allowed origins (frontend domains)
ALLOWED_ORIGINS=http://localhost:3000,https://soulcraftbd.com

# Upload constraints
MAX_FILES=20
MAX_FILE_SIZE=2097152   # 2MB per image

# Allowed types
ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp
